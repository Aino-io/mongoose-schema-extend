{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.ts"
  ]
}